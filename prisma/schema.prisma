generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id String @id @unique

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String
  account    Account  @relation(fields: [accountId], references: [id])
  accountId  String

  reference String?
  date      DateTime
  amount    Float
  currency  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id           String @id @unique
  name         String
  color        String
  transactions Transaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id           String @id @unique
  name         String?       @default("Anonymus")
  bank         String
  transactions Transaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
